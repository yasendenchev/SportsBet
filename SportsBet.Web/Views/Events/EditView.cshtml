@model IEnumerable<SportsBet.Models.EventViewModel>
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<script src="~/Scripts/Custom.js"></script>
<div id=" grid">
    @{
        //var gender = Model.Select(app => app.);
        //var gender1 = from name in gender.First()
        //              select new SelectListItem
        //              {
        //                  Value = name,
        //                  Text = name
        //              };
        var gridview = new WebGrid(source: Model, rowsPerPage: 30);
    }

    @gridview.GetHtml(tableStyle: "webGrid", headerStyle: "header", alternatingRowStyle: "altColor",
        columns:
                gridview.Columns(
                    gridview.Column("", style: "button",
                        format:
                    @<text>
                        <button class="edit-case read" id="@item.Id">Edit</button>
                        <button class="delete-case read" id="@item.Id">Delete</button>
                        <button class="update-case edit" id="@item.Id">Update</button>
                        <button class="cancel-case edit" id="@item.Id">Cancel</button>
                    </text>),
                            //gridview.Column("Name"),
                            //gridview.Column("OddsFirstTeam"),
                            gridview.Column("Name",
                                format:
                            @<text>
                                <span id="name" class="read">@item.Name</span>
                                @Html.TextBox("Name", (string)item.Name, new { @class = "edit" })
                            </text>)
                                        ))
</div>


















